<div class="page-header">
  <h1>
    Dishes
    <!--<a href="/dishes/new" class="btn btn-lg btn-success">New Dish</a>-->
  </h1>
</div><div class="row">
  <div class="col-md-3">
    <%= search_form_for @q, :class => "collapse", :id => "dishes_filters" do |f| %>
      <p class="lead">Narrow results:</p>

      <div class="form-group">
        <%= f.label :name_cont, "Name contains" %>
        <%= f.text_field :name_cont, :class => "form-control", :placeholder => "Name contains" %>
      </div>

      <%= f.submit :class => "btn btn-primary btn-block mb-1" %>

      <a href="/dishes" class="btn btn-secondary btn-block mb-1">Clear filters</a>
    <% end %>
    <a class="btn btn-secondary btn-block mb-1" data-toggle="collapse" href="#dishes_filters">
      Show Filters
    </a>
  </div>
  <div class="col-md-6">
    <table class="table table-striped table-hover">
      <tr>
        <th>The very best...</th>
        <th>is at...</th>
        <th></th>
      </tr>

      <% @dishes.each do |dish| %>
      <tr>
        <td><a href="/dishes/<%= dish.id %>"><%= dish.name %></a></td>
        <td>
          <!-- Bookmark -->
          <% if Bookmark.where(user_id: current_user.id, dish_id: dish.id).exists? %>
          <a href="/venues/<%= Bookmark.where(user_id: current_user.id, dish_id: dish.id)[0].venue_id %>">
            <%= Venue.find(Bookmark.where(user_id: current_user.id, dish_id: dish.id)[0].venue_id).name %>
          </a>
          <% else %>
          <form action="/create_bookmark" method="post">
            <input type="hidden" name="user_id" value="<%= current_user.id %>">
            <%= select_tag(:venue_id, options_from_collection_for_select(Venue.all, :id, :name), :prompt => "Choose a venue...", :class => "form_control") %>
            <button class="btn btn-primary btn-sm">
              <i class="fa fa-heart"></i>
            </button>
          </form>
          <% end %>
        </td>
        <td>
          <% if dish.cuisine.present? %>
              <span class="badge badge-primary">
              <%= dish.cuisine.name %>
              </span>
          <% end %>
          <!--<a href="" class="btn btn-primary">Show</a>
          <a href="/dishes/<%= dish.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_dish/<%= dish.id %>" class="btn btn-danger" rel="nofollow">Delete</a>-->
        </td>
      </tr>
      <% end %>
    </table>
    <%= paginate @dishes, theme: 'twitter-bootstrap-4' %>
  </div>
</div>
